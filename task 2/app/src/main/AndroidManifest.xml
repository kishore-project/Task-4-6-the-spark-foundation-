<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mybanking">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyBanking">

        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ChooseSender"
            android:label="Transfer Money"
            android:screenOrientation="portrait" />

        <activity
            android:name=".user_list"
            android:label="Banking System"
            android:screenOrientation="portrait" />

        <activity
            android:name=".userData"
            android:label="User Details"
            android:parentActivityName=".user_list"
            android:screenOrientation="portrait" />

        <activity
            android:name=".history_list"
            android:label="Transactions"
            android:parentActivityName=".user_list"
            android:screenOrientation="portrait" />
    </application>

</manifest>